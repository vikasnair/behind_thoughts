{{#if author}}
	<h2>{{author}}</h2>
{{else}}
	<h2>All Strategies</h2>
{{/if}}

<ol>
	{{#each strategies}}
		<li><a href="strategy/{{this.slug}}">{{this.title}}</a></li>
	{{/each}}
</ol>

<h2>Search</h2>

<form method="GET" action="">
	<div>
		<label for="title">Title:</label>
		<input type="text" name="title" value="">
	</div>
	<input type="submit" value="Search">
</form>
